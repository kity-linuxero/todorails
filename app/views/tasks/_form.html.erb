<%= form_for([@task_list, task]) do |f| %>
  <% if task.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <strong><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</strong> prohibited this task_list from being saved:
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% unless task.type.nil?%>
  <div class="form-group">
    <label class="col-form-label"><%= f.label :type %>: <%= task.type %></label>
  </div>
<% end %>

  <div class="form-group" style='max-width:600px' >
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", :required => true %>
  </div>

<% if task.type.nil? %>
  <div class="form-group" style='max-width:600px'>
    <%= f.label :type %>
    <%= f.select(:type, [['Simple','SimpleTask'], ['Long','LongTask'], ['Temporary','TemporaryTask']], {}, class: "form-control") %>
    <small class="form-text text-muted">Simple Task (default), Long Task or Temporary Task</small>
  </div>
<% end %>

  <% unless task.type =="LongTask" %>
  <div class="form-group" style='max-width:600px'>
    <%= f.label :status %>
    <%= f.select(:status, [[t('task.status.pending'),'pending'], [t('task.status.done'),'done']], {}, class: "form-control") %>
    <small class="form-text text-muted">Pending (default) or Done</small>
  </div>
  <% end %>

    <div class="form-group" style='max-width:600px'>
    <%= f.label :priority%>
    <%= f.select(:priority, [[t('task.priority.high'),'high'], [t('task.priority.medium'),'medium'], [t('task.priority.low'),'low']], {}, class: "form-control", :required => true) %>
    <small class="form-text text-muted">High, Medium or Low</small>

  </div>

<% if task.type.nil? || task.type == "LongTask" %>
  <div class="form-group" style='max-width:600px'>
    <%= f.label :percentage_of_completion%>
   <div class="input-group">
     <div class="input-group-addon">%</div>
      <%= f.number_field :percentage_of_completion, class: "form-control", in: 0..100, placeholder: "0-100%" %>
    </div>
    <% if task.type.nil? %>
    <small class="form-text text-muted">Only for Long Tasks</small>
    <% end %>
  </div>
<% end %>

<% if task.type.nil? || task.type == "TemporaryTask" %>
<div class="card" style='max-width:600px'>
  <div class="card-block">
    <p class="card-text">Temporary task: </p>
  <div class="form-group">
    <%= f.label :start_at %>
    <%= f.datetime_select :start_at %>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <%= f.datetime_select :end_at %>
  </div>
  </div>
  <small class="form-text text-muted">Only for Temporary Tasks</small>
</div>
<% end %>

  <div class="actions">
    <%= f.submit t('task_list.new.submit'), class: "btn btn-success" %>
  </div>
<br>
<% end %>
