<%= form_for([@task_list, task]) do |f| %>
  <% if task.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <strong><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</strong> prohibited this task_list from being saved:
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% unless task.type.nil?%>
  <div class="form-group row">
    <label class="col-xs-1 col-form-label">Type:</label>
    <div class="col-xs-5">
      <p class="form-control-static mb-0"><%= task.type %></p>
    </div>
  </div>
<% end %>

  <div class="form-group row" >
    <%= f.label :description, class:"col-xs-1 col-form-label", :maxlength => "10" %>
    <div class="col-xs-5">
    <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

<% if task.type.nil? %>
  <div class="form-group row">
    <%= f.label :type, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:type, [['SimpleTask'], ['LongTask'], ['TemporaryTask']], {}, class: "form-control") %>
  </div>
  </div>
<% end %>

  <div class="form-group row">
    <%= f.label :status, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:status, [['pending'], ['done']], {}, class: "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :priority, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:priority, [['high'], ['medium'], ['low']], {}, class: "form-control") %>
  </div>
  </div>

<% if task.type.nil? || task.type == "LongTask" %>
  <div class="form-group row">
    <%= f.label 'complete:', class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
   <div class="input-group">
     <div class="input-group-addon">%</div>
      <%= f.number_field :percentage_of_completion, class: "form-control", in: 0..100, placeholder: "Percentage of completion" %>
    </div>
  </div>
  </div>
<% end %>

<% if task.type.nil? || task.type == "TemporaryTask" %>
  <div class="form-group row">
    <%= f.label :start_at, class:"col-xs-1 col-form-label"  %>
    <div class="col-xs-5">
    <%= f.datetime_select :start_at %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :end_at, class:"col-xs-1 col-form-label"  %>
    <div class="col-xs-5">
    <%= f.datetime_select :end_at %>
  </div>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit :Create, class: "btn btn-success" %>
  </div>

<% end %>
