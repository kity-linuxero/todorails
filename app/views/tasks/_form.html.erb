<%= form_for([@task_list, task]) do |f| %>
  <% if task.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <strong><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</strong> prohibited this task_list from being saved:
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group row">
    <%= f.label :description, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :type, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:type, [['SimpleTask'], ['LongTask'], ['TemporaryTask']], {}, class: "form-control") %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :status, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:status, [['pending'], ['done']], {}, class: "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :priority, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.select(:priority, [['high'], ['medium'], ['low']], {}, class: "form-control") %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :percentage_of_completion, class:"col-xs-1 col-form-label" %>
    <div class="col-xs-5">
    <%= f.number_field :percentage_of_completion, class: "form-control", in: 0..100 %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :start_at, class:"col-xs-1 col-form-label"  %>
    <div class="col-xs-5">
    <%= f.datetime_select :start_at %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :end_at, class:"col-xs-1 col-form-label"  %>
    <div class="col-xs-5">
    <%= f.datetime_select :end_at %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
