<h4 style="float: left;">Tasks</h4>
<div class="table-responsive">
<table class="table table-striped table-sm ">
  <thead class="thead-inverse">
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Type of Task</th>
      <th>Completed</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="2" style="width: 5%;"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_list.tasks.sort.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td><%= task.status.humanize %></td>
        <td class="center_text"><%= task.priority.humanize %></td>
        <td class="center_text"><%= task.type_taks %></td>
        <td class="center_text"><%= "#{task.percentage_of_completion} %" if task.instance_of? LongTask %></td>
        <td><%= task.start_at.getlocal.strftime("%m/%d/%Y - %H:%M") if task.instance_of? TemporaryTask %></td>
        <td><%= task.end_at.getlocal.strftime("%m/%d/%Y - %H:%M") if task.instance_of? TemporaryTask %></td>
        <td><%= link_to 'Edit', edit_task_path(task, @task_list) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
