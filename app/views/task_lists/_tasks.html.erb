<h4 style="float: left;">Tasks</h4>
<div class="table-responsive">
<table class="table table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Percentage of completion</th>
      <th>Type</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_list.tasks.sort.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.percentage_of_completion %></td>
        <td><%= task.type %></td>
        <td><%= task.start_at.getlocal.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= task.end_at.getlocal.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= link_to 'Details', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task, @task_list) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
