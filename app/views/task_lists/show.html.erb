<%= render 'layouts/notice' %>

  <h3><strong><%= @task_list.name %></strong></h3>


<p>
<strong><%= t 'task_list.created_at'%>: </strong>
<%= l @task_list.created_at.getlocal, format: :short %>
 -
<strong><%= t 'task_list.modified_at'%>: </strong>
<%= l @task_list.updated_at.getlocal, format: :short %>
</p>
<%= link_to t('application.edit'), edit_task_list_path(@task_list) %> |
<%= link_to t('application.back'), task_lists_path %> |
<%= link_to t('application.delete'), @task_list, method: :delete, data: { confirm: t('application.confirmation') } %>

<hr>

<div style="float: right;">
<%= button_to 'New Task', new_task_list_task_path(@task_list, @task, locale: I18n.locale), method: :get, class: 'btn btn-outline-primary'%>
</div>

<% if @task_list.tasks.empty? %>
<br><br>
  <div class="alert alert-success" role="alert">

  <strong>No tasks!</strong> Clic in "New Task" to create one.
</div>
<% else %>
<%= render 'tasks' %>
<% end %>
