<% if @task_list.nil? %>
<% redirect_to new_task_list_task_path, notice: 'No hay listas' %>
<%else%>

<%= render 'layouts/notice' %>


  <h3><strong><%= @task_list.name %></strong></h3>


<p>
<strong>Created at: </strong>
<%= @task_list.created_at.getlocal.strftime("%d/%m/%Y - %H:%M") %>
 -
<strong>Modified at: </strong>
<%= @task_list.updated_at.getlocal.strftime("%d/%m/%Y - %H:%M") %>
</p>
<%= link_to 'Edit', edit_task_list_path(@task_list) %> |
<%= link_to 'Back', task_lists_path %> |
<%= link_to 'Destroy', @task_list, method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>

<div style="float: right;">
<%= button_to 'New Task', new_task_list_task_path(@task_list, @task), method: :get, class: 'btn btn-outline-primary' %>
</div>

<% if @task_list.tasks.empty? %>
<br><br>
  <div class="alert alert-success" role="alert">

  <strong>No tasks!</strong> Clic in "New Task" to create to one</a>.
</div>
<% else %>
<%= render 'tasks' %>
<% end %>

<% end %>
