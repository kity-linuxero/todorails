<%= render 'layouts/notice' %>
<% unless @task_lists.empty? %>
<h2>Task Lists</h2>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Taks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_lists.each do |task_list| %>
      <tr>
        <td><%= task_list.name %></td>
        <td><%= task_list.tasks.count%></td>
        <td><%= link_to 'Show', task_list %></td>
        <td><%= link_to 'Edit', edit_task_list_path(task_list) %></td>
        <td><%= link_to 'Destroy', task_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="alert alert-warning" role="alert">

  <strong>No tasks list in this session!</strong> Clic in "New Task List" to create to one</a>.
  </div>
<%end %>
<br>
<%= link_to 'New Task List', new_task_list_path %>
